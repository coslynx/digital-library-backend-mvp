# This file is for environment variables for development and deployment.
# DO NOT commit this file to version control.

# Database Configuration
DATABASE_URL="postgresql://user:password@host:port/database_name"

# Secret Key for JWT Token Generation
SECRET_KEY="your_secret_key"

# API Configuration
API_BASE_URL="/api/v1"

# Logging Configuration
LOG_LEVEL="INFO"

# Caching Configuration
CACHE_URL="redis://localhost:6379"

# Debug Mode (Set to True for development)
DEBUG=False

# Development Mode (Set to True for development)
DEVELOPMENT=False

# Production Mode (Set to True for production)
PRODUCTION=False

# Email Configuration
EMAIL_HOST="smtp.example.com"
EMAIL_PORT=587
EMAIL_USER="your_email@example.com"
EMAIL_PASSWORD="your_email_password"
EMAIL_SENDER="digital-library@example.com"

# Third-Party API Keys (replace with your actual keys)
GOOGLE_BOOKS_API_KEY="your_google_books_api_key"
AMAZON_BOOKS_API_KEY="your_amazon_books_api_key"

# Security Configuration
# (Keep these values secure and never share them publicly)
# (Set these values to 'true' for stricter security)
FORCE_HTTPS=False  # Enforces HTTPS for all requests
CORS_ALLOWED_ORIGINS="*"  # Allows requests from all origins
SECURE_COOKIE_SETTINGS=False  # Enforces secure cookie settings

# Metrics and Monitoring Configuration
# (Set these values to 'true' to enable metrics and monitoring)
METRICS_ENABLED=False
MONITORING_ENABLED=False

# Deployment Configuration
# (These values should be set during deployment)
DEPLOYMENT_ENV="development"  # Example: "development", "staging", "production"
DEPLOYMENT_HOST="0.0.0.0"  # Example: "localhost", "127.0.0.1", "your_server_ip"
DEPLOYMENT_PORT=8000        # Example: 8000, 8080, 443